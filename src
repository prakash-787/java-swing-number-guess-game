import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

public class NumberGuessingGame {
    private int randomNumber;
    private int attemptsLeft;
    private final int MAX_ATTEMPTS = 5;
    private JTextField inputField;
    private JLabel messageLabel;
    private JLabel attemptsLabel;

    public NumberGuessingGame() {
        Random rand = new Random();
        randomNumber = rand.nextInt(100) + 1;
        attemptsLeft = MAX_ATTEMPTS;
        createUI();
    }

    private void createUI() {
        JFrame frame = new JFrame("Number Guessing Game");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 300);
        frame.setLayout(new FlowLayout());

        JLabel instructionLabel = new JLabel("Guess a number between 1 and 100:");
        frame.add(instructionLabel);

        inputField = new JTextField(10);
        frame.add(inputField);

        JButton guessButton = new JButton("Guess");
        frame.add(guessButton);

        messageLabel = new JLabel("You have " + attemptsLeft + " attempts left.");
        frame.add(messageLabel);

        attemptsLabel = new JLabel("");
        frame.add(attemptsLabel);

        guessButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                checkGuess();
            }
        });

        frame.setVisible(true);
    }

    private void checkGuess() {
        try {
            int guess = Integer.parseInt(inputField.getText());
            attemptsLeft--;

            if (guess == randomNumber) {
                messageLabel.setText("Congratulations! You guessed it right.");
                inputField.setEnabled(false);
            } else if (guess > randomNumber) {
                messageLabel.setText("Too High! Attempts left: " + attemptsLeft);
            } else {
                messageLabel.setText("Too Low! Attempts left: " + attemptsLeft);
            }

            if (attemptsLeft <= 0 && guess != randomNumber) {
                messageLabel.setText("Game Over! The correct number was: " + randomNumber);
                inputField.setEnabled(false);
            }
        } catch (NumberFormatException e) {
            messageLabel.setText("Please enter a valid number!");
        }
    }

    public static void main(String[] args) {
        new NumberGuessingGame();
    }
}
